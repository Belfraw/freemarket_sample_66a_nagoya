        = button_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post,  class: "member__google"

         
  .member__rule
    .member__rule__content
      = link_to 'プライバシーポリシー', '#', class: "sinki__kiyaku__content__h"
      = link_to 'フリマアプリ利用規約', '#', class: "sinki__kiyaku__content__h"
      = link_to '特定商取引に関する表記', '#',  class: "sinki__kiyaku__content__h"
