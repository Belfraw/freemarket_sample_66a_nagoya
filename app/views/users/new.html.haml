    = image_tag 'fmarket_logo_red.svg', class: "fmarket__header"
    

  .member__body
    .member__body__new
      %p.new__member 新規会員登録
    .member__body__content
      .member__body__content__mail

        = button_to 'メールアドレスで登録', new_user_registration_path, method: :get, class: "member__mail"
        %br/
        %i.icon-facebook
        = button_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post,  class: "member__facebook"
